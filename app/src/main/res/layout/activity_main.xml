<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="#ffffff"
            android:layout_marginLeft="5dp"
            android:text="Hi! This is budgit."/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:inputType="number"
            android:imeOptions="actionDone"
            android:id="@+id/allowance"
            android:textColorHint="#000000"
            android:textColor="#ffffff"
            android:hint="type your monthly allowance here..."
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFFFFF">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Feeding"
                android:layout_margin="20dp"
                android:textColor="#000000"
                android:layout_weight="1"
                android:textAlignment="center" />

            <TextView
                android:layout_width="0dp"
                android:id="@+id/feeding_text_view"
                android:layout_height="wrap_content"
                android:text="Amount: "
                android:textColor="@android:color/holo_green_light"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="40%"
                android:textColor="#000000"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:textAlignment="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:textColor="#000000"
                android:text="Study materials"
                android:textAlignment="center"
                />

            <TextView
                android:id="@+id/studyMaterial_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:text="Amount: "
                android:textColor="@android:color/holo_green_light"
                android:textAlignment="center" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:text="10%"
                android:textColor="#000000"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Clothing"
                android:layout_margin="20dp"
                android:textColor="#000000"
                android:layout_weight="1"
                android:textAlignment="center" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Amount: "
                android:id="@+id/clothing_text_view"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textColor="@android:color/holo_green_light"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="20%"
                android:layout_margin="20dp"
                android:textColor="#000000"
                android:layout_weight="1"
                android:textAlignment="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:textColor="#000000"
                android:text="Transport"
                android:textAlignment="center" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:text="Amount: "
                android:id="@+id/transport_text_view"
                android:textAlignment="center"
                android:textColor="@android:color/holo_green_light"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:text="10%"
                android:textColor="#000000"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Misceleneous"
                android:layout_margin="20dp"
                android:textColor="#000000"
                android:layout_weight="1"
                android:textAlignment="center" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Amount: "
                android:id="@+id/misceleneous_text_view"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textColor="@android:color/holo_green_light"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="10%"
                android:layout_margin="20dp"
                android:textColor="#000000"
                android:layout_weight="1"
                android:textAlignment="center"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Savings"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textAlignment="center" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Amount: "
                android:id="@+id/savings_text_view"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textColor="@android:color/holo_green_light"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="20%"
                android:layout_margin="20dp"
                android:textColor="#000000"
                android:layout_weight="1"
                android:textAlignment="center"/>

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="calculate"
            android:text="Budgit!"
            android:textAlignment="center"
            android:textColor="@android:color/holo_purple"
            android:gravity="center"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Reset"
            android:textAlignment="center"
            android:layout_marginTop="-50dp"
            android:layout_marginLeft="280dp"
            android:onClick="reset"
            android:textColor="@android:color/holo_purple" />
    </LinearLayout>
</ScrollView>